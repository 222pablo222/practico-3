#include <stdio.h>
#include <math.h>
int main() {
    int n, i;
    float x, suma = 0;

    printf("Ingrese el valor de x: ");
    scanf("%f", &x);

    printf("Ingrese el valor de n: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        suma += pow(x, i);  
    }

    printf("La suma de la serie es: %.2f\n", suma);

    return 0;
}
