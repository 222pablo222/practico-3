#include <stdio.h>

int main() {
    int N, i;
    int suma = 0;

    printf("Ingrese un numero entero positivo N: ");
    scanf("%d", &N);

    if (N < 1) {
        printf("El numero debe ser mayor o igual a 1.\n");
        return 0;
    }

    for (i = 1; i <= N; i++) {
        if (i % 2 == 0) {
            suma -= i;  
        } else {
            suma += i;  
        }
    }

    printf("El valor de la suma S = 1 - 2 + 3 - 4 + ... +/- %d es: %d\n", N, suma);

    return 0;
}
