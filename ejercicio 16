#include <stdio.h>

int main() {
    int N, i;
    int esPrimo = 1; 

    printf("Ingrese un n√∫mero entero positivo: ");
    scanf("%d", &N);

    if (N <= 1) {
        printf("%d no es primo.\n", N);
        return 0;
    }


    for (i = 2; i * i <= N; i++) {
        if (N % i == 0) {
            esPrimo = 0; 
            break;
        }
    }

    if (esPrimo) {
        printf("%d es primo.\n", N);
    } else {
        printf("%d no es primo.\n", N);
    }

    return 0;
}
